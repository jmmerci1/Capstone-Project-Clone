<Window x:Class="DirectorsPortalWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectorsPortalWPF"
        mc:Ignorable="d"
        Title="Director's Portal" Height="700" Width="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="76" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Fill="#FF00B0F0"/>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Image x:Name="imgChesaningMainLogo" Source="./Resources/chamberlogo_1.jpg" Cursor="None" HorizontalAlignment="Left"  />
            <TextBlock Text="Chesaning Chamber of Commerce"  Foreground="White" Padding="10,0,0,0" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>
       

        <Rectangle Grid.Row="1" Grid.Column="0" Fill="#FFF1F2F7"  Width="150"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button Content="Member Info" Click="MembersPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            <Button Content="Payment Info" Click="PaymentsPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            <Button Content="Email Members" Click="EmailPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            <Button Content="Generate Reports" Click="GenerateReportsPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            <Button Content="Validate Website" Click="WebsitePreviewPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />

            <Separator Height="70" Foreground="{x:Null}" Background="{x:Null}"/>

            <Button Content="TODOs" Click="TodoPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            <Button x:Name="btnSettings" Content="Settings" Click="SettingsPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            <Button x:Name="btnHelp" Content="Help" Click="HelpScreenPage_Navigate" Template="{StaticResource sideBarButton}" FontSize="14" />
            
        </StackPanel>
        <Frame x:Name="mainFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" Source="./MemberInfoUI/MembersPage.xaml"/>
    </Grid>
</Window>
